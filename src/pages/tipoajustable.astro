---
import Layout from "../layouts/Layout.astro";
const title = "Productos";
import Tarjeta from "../components/tarjeta.astro";
import Categorias from "../components/categorias.astro"
---
<Layout {title}>


    <!-- SECCION PARA LOS TIPOS DE GORRAS -->
    <section>
        <div id="nuestroproductos">
          <h2 id="tituloproductos">Gorras Tipo Ajustable :</h2>
        </div>
        <!-- CREAMOS CONTENEDOR PARA LAS TARJETAS  -->
        <div id="contenedormaintarjetas" class="tarjetas-flex">
            <div>
                <!-- AÃ‘ADIMOS COMPONENTE TARJETA CON LOS DIFERENTES PROPS -->
                <Tarjeta img="assets/gorras/newera/195131198105_1.avif" titulo="New Era" contenido="Recycled 66 Classic Hat Black Adjustable - New Era" precio="26,99" />
              </div>
              <div>
                <Tarjeta img="assets/gorras/thenorthface/196573241923_1.avif" titulo="The North Face" contenido="Hatstore Exclusive x New York Yankees" precio="35,40" />
              </div>
              <div>
                <Tarjeta img="assets/gorras/thenorthface/196573241923_1.avif" titulo="Goorin Bros" contenido="Los Angeles Dodgers 47 Mvp" precio="27,40" />
              </div>
              <div>
                <Tarjeta img="assets/gorras/thenorthface/196573138254_1.avif" titulo="The North Face" contenido="Recycled 66 Classic Hat Pink Moss Adjustable - The North Face" precio="31,99" />
              </div>
              <div>
                <Tarjeta img="assets/gorras/newera/196080801955_1.avif" titulo="The North Face" contenido="Los Angeles Dodgers 47 Mvp" precio="27,40" />
              </div>
              <div>
                <Tarjeta img="assets/gorras/newera/197215727461_1.avif" titulo="Goorin Bros" contenido="The Goat Coral Trucker - Goorin Bros" precio="19,90" />
              </div>
              <div>
                <Tarjeta img="assets/gorras/newera/197215727485_1.avif" titulo="New Era" contenido="Hatstore Exclusive x New York Yankees" precio="35,40" />
              </div>
              <div>
                <Tarjeta img="assets/gorras/thenorthface/196573241725_1.avif" titulo="The North Face" contenido="Recycled 66 Classic Dark Sage/Mist Sage Adjustable - The North Face" precio="31,99" />
              </div>
              <div>
                <Tarjeta img="assets/gorras/newera/197215727461_1.avif" titulo="Goorin Bros" contenido="The Goat Coral Trucker - Goorin Bros" precio="19,90" />
              </div>
        </div>
      </section>
      
      <style>
        #nuestroproductos {
          width: 70%;
        }
        #tituloproductos{
          margin-left:10%;
          margin-top:7%;
          margin-bottom:5%
        }
      
        #contenedormaintarjetas {
             /*TIPO FLEX PARA EL CONTENEDOR DE LAS TARJETAS */
          width: 100%;
          display: flex;
          flex-wrap: wrap;
          justify-content: space-between;
          gap: 20px; /* Espacio entre tarjetas */
        }
      
        #contenedormaintarjetas > div {
          width: calc(33.33% - 20px); /* Ajustar el ancho de cada tarjeta con un espacio de 20px entre ellas */
        }
      
        /* RESPONSIVE */
        @media (max-width: 767px) {
          /* RESPONSIVE PARA LA PAGINA */
          #contenedormaintarjetas > div {
            /* PARA MANEJAR EL ANCHO Y LOS BORDES DE LAS TARJETAS  */
            width: calc(100% - 20px); 
          }
        }
      </style>
</Layout>
